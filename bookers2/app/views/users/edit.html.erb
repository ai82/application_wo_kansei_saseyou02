<div class="container">
  <div class="row">
    <div class="col-md-8 col-lg-2 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user do |f| %>
        <label>Name</label><br>
        <%= f.text_field :name %><br>

        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "参照...", accept: "image/*" %><br>

        <label>Introduction</label><br>
        <%= f.text_area :introduction %><br>

        <%= f.submit 'Update User', class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
