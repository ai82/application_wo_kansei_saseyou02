<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @book_another.user.get_profile_image(100,100), class:"mt-3"; %>
      <table class="table">
        <thead></thead>
        <tbody>
          <tr>
            <td>name</td>
            <td><%= @book_another.user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= @book_another.user.introduction %></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@book_another.user.id), class:"btn btn-outline-secondary btn-block" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <label>Title</label><br>
        <%= f.text_field :title %><br>

        <label>Opinion</label><br>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book', class:"btn btn-secondary btn-info" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
        </thead>
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book_another.user.id), method: :get do %>
                  <%= image_tag @book_another.user.get_profile_image(100,100), class:"mt-3"; %><br>
                  <%= @book_another.user.name %>
                <% end %>
              </td>
              <td><%= link_to "#{@book_another.title}", book_path(@book_another.id) %></td>
              <td><%= @book_another.body %></td>
              <% if @book_another.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@book_another.id), class:"btn btn-secondary btn-info" %></td>
                <td><%= link_to "Destroy", book_path(@book_another.id), class:"btn btn-secondary btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

